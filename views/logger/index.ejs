<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Game Back-Logger</title>
</head>
<body id="indexbody">
    <h1>All User Game Logs</h1>
    <nav>
        <a href="/"><button class="indexButton">Home üè†</button></a>
        <a href="/logs"><button class="indexButton">Logger ü™ì</button></a>
        <a href="/logs/new"><button class="indexButton">Add New Game Log ‚ûï</button></a>
    </nav>
    <fieldset id="indexFieldSet">
        <legend id="indexLegend">Game Logs</legend>
        <ul>
            <% logs.forEach(function(log) { %>
                <li>
                    <strong>UserID: </strong> <%= log.userId %>
    
                    <strong>Title: </strong> <%= log.gameTitle %>
    
                    <strong>Status: </strong> <%= log.completionStatus %>
    
                    <strong>User Rating: </strong> <%= log.userRating %>
    
                    <button class="editButton"><a class="editButton" href="/logs/<%= log._id %>/edit">Edit</a></button>
    
                    <form action="/logs/<%= log._id %>?_method=DELETE" method="POST" class="deleteButton">
                        <input type="submit" value="Delete" class="deleteButton">
                    </form>
                </li>
            <% }); %>
        </ul>

    </fieldset>

</body>
</html>